# BillTrim Desktop - Local SQLite, no Redis/OAuth
SECRET_KEY=your-secret-key-change-in-production
DATABASE_PATH=data/billtrim.db
HOST=127.0.0.1
PORT=8765

# SMS Configuration (via MessageBot API)
# Set SMS_ENABLED=true to enable SMS notifications
SMS_ENABLED=false
# Get API token from https://messagebot.in
MESSAGEBOT_API_TOKEN=your-messagebot-api-token
# Your registered sender ID (e.g., BILLTM) - must be registered with MessageBot
MESSAGEBOT_SENDER_ID=BILLTM

# License server (for server-side validation and payment flow)
# Base URL of the hosted license service (e.g. https://license.yourbilltrim.com)
LICENSE_SERVER_URL=
# Optional: API key if desktop backend calls license server (e.g. for assign after onboard)
# LICENSE_SERVER_API_KEY=

# License and discount codes
# Charge per license in INR (0 = free for now)
LICENSE_PRICE_INR=0
# Required for admin endpoints (e.g. discount code generator). Set and use in Postman as X-Admin-API-Key header.
ADMIN_API_KEY=
